using namespace std;
#include<iostream>

#define size 5
int stack[size], top = -1;

void push(int value)
{
	if (top == size - 1)
	{
		cout << "stack is overflow";
	}
	else
	{
		top++;
		stack[top] = value;
	}
}

int pop()
{
	if (top == -1)
	{
		cout << "no elements";
	}
	else
	{
		return stack[top--];
	}
}

int peek()
{
	if (top == -1)
	{
		cout << "no elements";
	}
	else
	{
		return stack[top];
	}
}

void display()
{
	if (top == -1)
	{
		cout << "no elements";
	}
	else
	{
		for (int i = top; i >= 0; i--)
		{
			cout << stack[i]<<"\n";
		}
	}
}
int main()
{
	push(1);
	push(2);
	push(3);
	push(4);

	pop();
	peek();

	display();
}
