using namespace std;
#include<iostream>

#define size 4
int queue[size];
int front=-1, rear = -1;


void enqueue(int value)
{
	if (rear < size - 1)
	{
		if (front == -1 && rear == -1)
		{
			front++;
			queue[++rear] = value;
		}
		else
		{
			queue[++rear]=value;
		}
	}
	else
	{
		cout << "queue is full!";
	}
}


void dequeue()
{
	if (front != -1 && rear != -1 && front <= rear)
	{
		front++;

	}
	else
	{
		cout << "queue is empty!";
	}
}


int peek()
{
	if (front != -1 && rear != -1 && front <= rear)
	{
		return queue[front];
	}
	else
	{
		cout << "queue is empty!";
	}
}

void display()
{
	if (front != -1 && rear != -1 && front <= rear)
	{
		for(int i=front;i<=rear;i++)
		cout<<queue[i]<<endl;
	}
	else
	{
		cout << "queue is empty!";
	}
}




int main()
{
	enqueue(1);
	enqueue(2);
	enqueue(3);

	dequeue();

	cout<<"peek: "<<peek()<<endl;
	display();
}
