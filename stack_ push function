
using namespace std;
#include <iostream>


const int Maxsize = 30;
class stack
{
private:
	int top;
	int array[Maxsize];

public:

	stack():top(-1){}

	void push(int Element)
	{
		if (top > Maxsize - 1)
		{
			cout << "stack is full";
		}
		else
		{
			top++;
			array[top] = Element;
		}


	}


	void print()
	{
		cout << "[";
		for (size_t i = 0; i <= top ; i++)
		{
			cout << array[i]<<" ";
		}
		cout << "]";
	}



};



int main()
{
	stack s;
	s.push(1);
	s.push(2);
	s.push(3);
	s.push(4);
	
	s.print();

}
